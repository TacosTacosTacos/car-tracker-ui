
<form id="model-form" class="col-md-offset-4 col-md-4 form-horizontal" {{action "submit" on='submit'}}>
<legend>Edit Maintenance Record</legend>
  <div class="">
    {{car-select model=model.cars selectedOption=model.maintenance.car_id}}
    {{service-type-select model=model.service_types selectedOption=model.maintenance.service_type_id}}
    {{service-date-input service_date=model.maintenance.service_date}}
    {{current-mileage-input current_mileage=model.maintenance.current_mileage}}
    {{notes-input notes=model.maintenance.notes}}

    <div class="container row">
      <div class="col-sm-3">
        {{#link-to "maintenance"}}
          <button type="button" class="btn btn-lg btn-block btn-warning">Previous</button>
        {{/link-to}}
      </div>
      <div class="col-sm-3">
        <button type="submit" class="btn btn-lg btn-block btn-primary">Save</button>
      </div>
    </div>
  </div>
</form>
